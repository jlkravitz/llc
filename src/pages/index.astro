---
// index.astro
import { TypeAnimation } from "react-type-animation";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import "@fontsource/finger-paint";

const email = "hello@magicclay.io";
---

<Layout title="Magic Clay">
  <main class="flex flex-col h-screen bg-yellow-400 text-black justify-center">
    <div
      class="flex flex-col-reverse items-center sm:items-start sm:flex-row gap-12 sm:gap-4 p-4"
    >
      <Image
        src="/logo.png"
        alt="Magic Clay logo"
        width="100"
        height="100"
        class="rounded-full w-36 sm:w-36 shadow-2xl"
      />
      <h1 class="text-6xl place-self-center">Magic Clay</h1>
    </div>
    <div
      class="flex-grow flex flex-col text-center sm:flex-row justify-center mb-24 gap-8 sm:gap-2 items-center
    text-4xl"
    >
      <span>It's time to mold your ideas into</span><TypeAnimation
        className="bg-green-500 m-2 p-2 rounded-sm"
        client:load
        preRenderFirstString={true}
        sequence={[
          "reality.",
          3000,
          "a prototype.",
          2000,
          "a dashboard.",
          2000,
          "a quantitative analysis.",
          2000,
          "a repeatable process.",
          2000,
          "something magical.",
          2000,
        ]}
        wrapper="span"
        speed={50}
        repeat={Infinity}
      />
    </div>
    <button
      class="bg-white rounded-lg text-2xl p-6 sm:text-xl sm:p-4 shadow-md hover:bg-gray-100 self-start m-8 mx-auto"
    >
      Learn More
    </button>
  </main>
</Layout>

<style>
  h1 {
    font-family: "Finger Paint";
  }
</style>
